			<ee:transform doc:name="Transform Message" doc:id="6bd6688b-fe02-4f8a-8172-24ec42f5463a" >
				<ee:message >
					<ee:set-payload ><![CDATA[%dw 2.0
output application/java
---
{
	encabezado: {
		mensaje: "ERROR EN SERVIDOR",
		operacion: false,
		capa: "xp"
	},
	contenido: {
		tipo: error.errorType,
		descripcion: error.description
	}
